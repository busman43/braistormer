{
  "name": "brainstorming-engine",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:web",
    "preview": "vite preview",
    "build:web": "tsc -b && vite build",
    "dev:desktop": "concurrently -k \"vite\" \"wait-on http://127.0.0.1:5173 && electron .\"",
    "dist:win": "npm run build:web && electron-builder --win nsis",
    "dist:linux": "npm run build:web && electron-builder --linux AppImage"
  },
  "dependencies": {
    "@headlessui/react": "^2.1.8",
    "@hookform/resolvers": "^3.9.0",
    "lucide-react": "^0.460.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.2",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.28.0",
    "zod": "^3.23.8",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vite-plugin-pwa": "^0.20.5",
    "concurrently": "^9.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "wait-on": "^8.0.1"
  },
  "main": "electron-main.cjs",
  "build": {
    "appId": "com.braistormer.engine",
    "productName": "Brainstorming Engine",
    "files": [
      "dist/**/*",
      "electron-main.cjs",
      "package.json"
    ],
    "directories": {
      "buildResources": "build-resources"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
