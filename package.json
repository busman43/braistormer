{
  "name": "brainstorming-engine",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:prod",
    "preview": "vite preview",
    "build:prod": "tsc -b && vite build",
    "serve:desktop": "node scripts/desktop-server.cjs",
    "build:exe": "npm run build:prod && pkg scripts/desktop-server.cjs --targets node18-win-x64 --output release/brainstorming-engine.exe"
  },
  "dependencies": {
    "@headlessui/react": "^2.1.8",
    "@hookform/resolvers": "^3.9.0",
    "lucide-react": "^0.460.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.2",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.28.0",
    "zod": "^3.23.8",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vite-plugin-pwa": "^0.20.5",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "dist/**/*"
    ],
    "outputPath": "release"
  }
}
